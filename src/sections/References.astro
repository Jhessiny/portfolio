---
import { references } from "../data/references";
---

<section class="ref-section" id="references">
  <div class="ref-grid-bg"></div>
  <div class="ref-glow"></div>

  <div class="ref-container">
    <!-- Header -->
    <div class="ref-header" data-animate>
      <div class="ref-header__label">
        <div class="ref-header__line"></div>
        <span>References</span>
      </div>
      <h2 class="ref-header__title">
        WHO I'VE <span class="ref-accent">WORKED WITH</span>
      </h2>
    </div>

    <!-- Reference cards -->
    <div class="ref-list">
      {references.map((ref, i) => (
        <a
          class="ref-card"
          href={ref.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          data-animate
          style={`--delay: ${i * 0.12}s;`}
        >
          <div class="ref-card__inner">
            <div class="ref-card__icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            </div>
            <div class="ref-card__info">
              <h3 class="ref-card__name">{ref.name}</h3>
              <p class="ref-card__title">{ref.title}</p>
            </div>
            <div class="ref-card__arrow">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"/>
                <polyline points="7 7 17 7 17 17"/>
              </svg>
            </div>
          </div>
          <div class="ref-card__underline"></div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .ref-section {
    background: #060e1a;
    padding: 120px 60px;
    position: relative;
    overflow: hidden;
    font-family: 'IBM Plex Mono', monospace;
    box-sizing: border-box;
  }

  .ref-grid-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background-image:
      linear-gradient(rgba(100,255,218,0.018) 1px, transparent 1px),
      linear-gradient(90deg, rgba(100,255,218,0.018) 1px, transparent 1px);
    background-size: 80px 80px;
  }

  .ref-glow {
    position: absolute;
    top: 20%;
    right: 15%;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(100,255,218,0.03) 0%, transparent 70%);
    pointer-events: none;
  }

  .ref-container {
    max-width: 1080px;
    margin: 0 auto;
    position: relative;
  }

  /* ── Header ── */
  .ref-header {
    margin-bottom: 64px;
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }
  .ref-header.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .ref-header__label {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 16px;
  }
  .ref-header__label span {
    font-size: 11px;
    letter-spacing: 0.25em;
    color: #64ffda;
    text-transform: uppercase;
  }
  .ref-header__line {
    width: 24px;
    height: 1px;
    background: #64ffda55;
  }

  .ref-header__title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(40px, 5vw, 68px);
    font-weight: 400;
    letter-spacing: 0.04em;
    line-height: 1;
    color: #c8d8e8;
    margin: 0;
  }
  .ref-accent {
    color: #64ffda;
  }

  /* ── Reference list ── */
  .ref-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* ── Card ── */
  .ref-card {
    display: block;
    text-decoration: none;
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.7s ease var(--delay, 0s), transform 0.7s ease var(--delay, 0s);
  }
  .ref-card.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .ref-card__inner {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px 28px;
    border: 1px solid #1e3a4a;
    background: #0a1628;
    transition: border-color 0.3s, box-shadow 0.3s, background 0.3s;
  }
  .ref-card:hover .ref-card__inner {
    border-color: #64ffda44;
    box-shadow: 0 0 24px rgba(100,255,218,0.06);
    background: #0d1b2a;
  }

  .ref-card__icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #1e3a4a;
    color: #5a8a9a;
    transition: color 0.3s, border-color 0.3s;
  }
  .ref-card:hover .ref-card__icon {
    color: #64ffda;
    border-color: #64ffda44;
  }

  .ref-card__info {
    flex: 1;
    min-width: 0;
  }

  .ref-card__name {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 24px;
    letter-spacing: 0.06em;
    color: #c8d8e8;
    margin: 0 0 4px;
    transition: color 0.3s, text-shadow 0.3s;
  }
  .ref-card:hover .ref-card__name {
    color: #ffffff;
    text-shadow: 0 0 20px #64ffda33;
  }

  .ref-card__title {
    font-size: 12px;
    letter-spacing: 0.15em;
    color: #5a8a9a;
    text-transform: uppercase;
    margin: 0;
    transition: color 0.3s;
  }
  .ref-card:hover .ref-card__title {
    color: #64ffda;
  }

  .ref-card__arrow {
    flex-shrink: 0;
    color: #1e3a4a;
    transition: color 0.3s, transform 0.3s;
  }
  .ref-card:hover .ref-card__arrow {
    color: #64ffda;
    transform: translate(2px, -2px);
  }

  .ref-card__underline {
    height: 1px;
    background: linear-gradient(to right, #64ffda33, transparent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
  }
  .ref-card:hover .ref-card__underline {
    transform: scaleX(1);
  }

  /* ── Responsive ── */
  @media (max-width: 768px) {
    .ref-section {
      padding: 80px 20px;
    }
    .ref-header {
      margin-bottom: 40px;
    }
  }

  @media (max-width: 480px) {
    .ref-card__inner {
      padding: 20px;
      gap: 16px;
    }
    .ref-card__name {
      font-size: 20px;
    }
  }
</style>
