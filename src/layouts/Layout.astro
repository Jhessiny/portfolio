---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Portfolio", description = "Frontend developer portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=IBM+Plex+Mono:wght@300;400&family=Roboto:wght@100;300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="font-body">
    <slot />
    <script>
      // Global scroll-triggered animation observer
      const globalObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('in-view');
            }
          });
        },
        { threshold: 0.1 }
      );

      document.querySelectorAll(
        '[data-animate], [data-exp-animate], [data-sr-animate], [data-sr-pill], [data-sr-lang]'
      ).forEach((el) => {
        globalObserver.observe(el);
      });
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
  @import "../styles/resume-particles.css";
</style>
